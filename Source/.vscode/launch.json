    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "启动程序",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--loader",
                "ts-node/esm",
                "--experimental-specifier-resolution=node",
                "--no-warnings"
            ],
            "args": [
                "${workspaceFolder}/server/App/Program.ts",
                "--AppType=Server",
                "--process=1",
                "--develop=true",
                "--loglevel=2"
            ]
        }
    ]
}